.modal-nodes
  max-width 1200px
  width 92%
  max-height 570px
  padding 30px 20px 50px 20px
  background-color #fff
  text-align center
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  margin auto
  z-index 1000
  color #65b2e4
  display none
  &--6
    background-image: url("../images/all-nodes-bg.jpg")
    background-repeat no-repeat
    background-size cover
    @media (max-width: 820px)
      height  570px
  @media (max-width: 820px)
    max-height 80%

  &__all-wrapper
    overflow-y scroll
    max-height 355px
    margin 0 auto
    max-width 90%
    &::-webkit-scrollbar-button
      background-image url('')
      background-repeat:no-repeat
      width 5px
      height 0px
    &::-webkit-scrollbar-track
      background-color rgba(255, 255, 255, 0.25)
    &::-webkit-scrollbar-thumb
      -webkit-border-radius 0px
      border-radius 0px
      background-color #fff
    &::-webkit-scrollbar-thumb:hover
      background-color #40230d
    &::-webkit-resizer
      background-image url('')
      background-repeat no-repeat
      width 4px
      height 0px
    &::-webkit-scrollbar
      width: 4px

  &__title
    color #40230d
    font-weight 400
    text-transform uppercase
    font-size 26px
    margin 18px 0 0 90px
    text-align left
    &-all
      color #fff
      margin 5px 0px 12px 0
    @media (max-width: 995px)
      margin-left  38px
    @media (max-width: 820px)
      font-size 20px
      margin-top 0
  &__list-wrapper
    float left
    width 50%
    @media (max-width: 1156px)
      width 50%
    @media (max-width: 1054px)
      width 100%


  &__list
    text-align left
    width 50%
    float left
    font-size 21px
    list-style none
    margin 40px 0 0 50px
    &--all
      font-size 14px
      float none
      width 100%
      margin 8px 0 13px 0
      padding 0
      & .modal-nodes__items-all
        margin-bottom 5px
        color #fff
        &:before
          content "―"
          height 20px
          display block
          float left
          padding 0 15px 0 0
          font-weight 300!important
          //@media (max-width: 820px)
          //  height 32px
    @media (max-width: 995px)
      margin-left  0
      padding 0
    @media (max-width: 820px)
      width 100%
      margin-top 12px
      font-size 17px

  &__all-list
    text-align left
    color #fff
    font-weight 400



  &__items
    margin-bottom 17px
    clear both
    color #40230d
    &-all
      max-width 90%
    &:hover
      cursor pointer
      color #40230d
    &:before
      content "―"
      height 52px
      display block
      float left
      padding 0 15px 0 0
      font-weight 300!important
      @media (max-width: 820px)
        height 32px
    @media (max-width: 820px)
      margin-bottom 5px
  &__image-block
    width 40%
    float right
    margin-top 40px
    @media (max-width: 820px)
      width 80%
      float none
      margin 10px auto 0 auto
      display inline-block
    @media (max-width: 600px)
      display none


  &__desc
    font-size 20px
    font-weight 400
    margin 10px 0

    @media (max-width: 768px)
      font-size 18px
    @media (max-height: 565px)
      font-size 16px

  &__close
    position absolute
    right 8px
    top 14px
    width 32px
    height 32px
    opacity 0.4
    &:hover
      opacity 1
    &:before, &:after
      position absolute
      left 15px
      content ' '
      height 20px
      width 2px
      background-color #40230d

    &:before
      transform rotate(45deg)

    &:after
      transform rotate(-45deg)


  &--features
    width 80%
    max-width 700px
    max-height 330px
    @media (max-width: 768px)
      max-height 400px
    @media (max-width: 435px)
      max-height 500px
    @media (max-height: 565px)
      max-height 424px

.modal__close-all::before, .modal__close-all::after
  content " "
  background-color #fff