.benefit
  background-color #ebebea
  &__wrapper
    margin 0 auto
    width 100%
    background-image: url("../images/benefit-bg.jpg")
    background-repeat no-repeat
    background-position 49% 49%
    position relative
    min-height 870px
    @media (max-width: 768px)
      min-height 750px
    @media (max-width: 385px)
      margin-top 14px
    @media (max-width: 357px)
      margin-top 40px
    @media (max-width: 353px)
      margin-top 175px
    @media (max-width: 318px)
      margin-top 185px
  &__title
    font-weight 300
    text-transform uppercase
    &-wrapper
      margin 0 auto
      display block
      padding 10px 0
      text-align center
      &--top
        top 0
        background-color #40230d
        & .benefit__title
          font-size 30px
          @media (max-width: 768px)
            font-size 25px
      &--bottom
        bottom 0
        max-width 100%
        background-color #a67f4f
        padding 27px 0
        width 100%
        position absolute
        & .benefit__title
          max-width 800px
          margin 0 auto
          font-size 34px
          @media (max-width: 768px)
            font-size 22px

  &__left
    padding-left 25%
    @media (max-width: 995px)
      padding-left 10%
    &-wrapper
      width 50%
      float left
      position absolute
      top 15%
      @media (max-width: 500px)
        width 46%



  &__right
    text-align right
    padding-right  25%
    @media (max-width: 995px)
      padding-right 10%
    &-wrapper
      width 50%
      float right
      //height calc(100vh - 280px)
      position absolute
      top 15%
      right 0
      @media (max-width: 500px)
        width 46%

  &__title-block
    font-size 30px
    font-weight 400
    text-transform uppercase
    color #40230d
    border-bottom 1px solid
    padding-bottom 2px
    &--left
      max-width 335px
      margin-bottom 5%
      @media (max-width: 768px)
        max-width 250px
        margin-top 36px
      @media (max-width: 520px)
        font-size 23px
    &--right
      max-width 300px
      margin-bottom 0.4%
      float right
      @media (max-width: 768px)
        max-width 250px
        margin-top 36px
        color #fff
      @media (max-width: 520px)
        font-size 23px
  &__desc
    font-size 19px
    max-width 290px
    background-color #a67f4f
    border-radius 7px
    line-height 1.23em
    clear both
    position relative
    @media (max-width: 768px)
      font-size 17px
    @media (max-width: 520px)
      font-size 15px
    @media (max-width: 450px)
      font-size 13px
    &--left
      float left
      margin 5% 0 0 0
      height 100%
      background url(../images/base64/benefit-left-bg.png) center
      background-size:100% 100%
      background-repeat no-repeat
      padding 14px 21px 25px 17px
      &:after
        content ""
        display block
        width 27px
        height 15px
        position absolute
        right 0px
        bottom 0px
        //background-image: url("data:../images/base64/benefit-desc-bg.png;base64,")
        //background-position 0 -2px

    &--right
      float right
      margin 9.2% 0 0 0
      height 100%
      background url(../images/base64/benefit-right-bg.png) center
      background-size:100% 100%
      background-repeat no-repeat
      padding 14px 21px 25px 28px

