.nodes
  color #3880ab
  background-image: url("../images/nodes-bg.jpg")
  background-repeat no-repeat
  background-size cover

  &__wrapper
    max-width 1200px
    margin 0 auto
    padding-bottom 70px

  &__left-wrapper
    float left
    max-width 700px
    @media (max-width: 1200px)
      max-width 540px
    @media (max-width: 954px)
      float none
      margin 0 auto

  &__right-wrapper
    float right
    @media (max-width: 954px)
      float none
      margin 0 auto
      width 100%
      display inline-block


  &__title-big
    font-size 35px
    font-weight 400
    color: #40230d
    text-transform uppercase
    margin 0px 0 0 0
    padding-top 38px
    @media (max-width: 954px)
      text-align center
    @media (max-width: 500px)
      font-size 28px

  &__title-small
    font-size 22px
    font-weight 400
    color: #40230d
    margin 9px 0 0 0
    display inline-block
    @media (max-width: 954px)
      text-align center

  &__show-modal-wraper
    max-width 100%
    margin-top 18px

  &__show-modal
    color #fff
    background-color #40230d
    padding 21px 35px
    float left
    width:100%
    max-width 236px
    margin 26px 0 0 0
    text-align center
    font-size 20px
    text-decoration none
    min-height 54px
    display flex
    -webkit-box-pack center
    -ms-flex-pack center
    justify-content center
    -webkit-box-orient vertical
    -webkit-box-direction normal
    -ms-flex-direction column
    flex-direction column
    border 2px solid #40230d
    -webkit-transition-property background
    -webkit-transition-duration 0.5s
    -webkit-transition-timing-function ease
    &:hover
      background none
      color #40230d
      font-weight 500
      border 2px solid
      -webkit-transition-property background
      -webkit-transition-duration 0.5s
      -webkit-transition-timing-function ease
    &:nth-child(odd)
      margin-right 9%
      @media (max-width: 1200px)
        margin-right 3%
      @media (max-width: 554px)
        margin 0 auto
    @media (max-width: 1200px)
      padding 21px 10px
      margin 26px 0 0 0
    @media (max-width: 554px)
      margin 12px auto
      float none
  &__title-bottom
    clear both
    font-size 35px
    font-weight 400
    color #40230d
    text-transform uppercase
    padding-top 55px
    @media (max-width: 954px)
      text-align center
    @media (max-width: 500px)
      padding-top 18px

  &__desc
    font-weight 400
    color #40230d
    padding-top 9px
    font-size 25px
    @media (max-width: 954px)
      text-align center
    @media (max-width: 500px)
      font-size 18px
