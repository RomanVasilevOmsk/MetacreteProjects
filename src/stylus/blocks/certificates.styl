.certificates
  background-color #fff
  padding-bottom 50px
  min-height 680px
  &__inner
    max-width 1200px
    margin 0 auto
    color: #2c3039;
    font-family: "PT Sans", sans-serif;

  &__title
    padding-top  40px
    font-size 40px
    font-weight 300
    text-align center
    margin-bottom 40px
    @media (max-width: 768px)
      font-size 28px
      margin-bottom 30px

    @media (max-width: 414px)
      font-size 18px
      padding-top 20px
      margin-bottom 20px

  &__title-bold
    font-weight bold


  &__top
    width 100%
    background-color #40230d
    padding 28px 0

  &__desc-top
    font-size 37px
    font-weight 300
    text-align center
    text-transform uppercase
    clear both
    @media (max-width: 768px)
      font-size 26px
    @media (max-width: 414px)
      font-size 16px

  &__left-wrapper
    width 50%
    float left
    margin-top 64px
    @media (max-width:1054px)
      float none
      width 100%
    @media (max-width: 500px)
      margin-top 5px

  &__desc-item
    color #40230d
    margin-bottom 30px
    @media (max-width: 500px)
      margin-bottom 0
      padding 0 30px 0 39px
  &__desc-title
    font-size 31px
    font-weight 400
    @media (max-width: 768px)
      font-size 28px
      margin-bottom 10px
    @media (max-width: 414px)
      font-size 18px
      padding-top 12px
      margin-bottom 5px
  &__desc
    font-size 24px
    font-weight 400
    margin 13px 0 0 34px
    position relative
    &:before
      content "â€•"
      position absolute
      left -35px
      top -1px
    @media (max-width: 768px)
      font-size 22px
      margin-bottom 10px

    @media (max-width: 414px)
      font-size 15px


