.button-main-form
  width 100%
  max-width 250px
  margin 26px auto 0 auto
  display block
  color #fff
  border 1px solid
  outline none
  background-color #40230d
  padding 10px 10px
  text-transform uppercase
  -webkit-transition-property background
  -webkit-transition-duration 0.3s
  -webkit-transition-timing-function ease
  &:hover
    cursor pointer
    color #40230d
    background-color #fff
    -webkit-transition-property background
    -webkit-transition-duration 0.3s
    -webkit-transition-timing-function ease

  &-nodes
    max-width 252px


