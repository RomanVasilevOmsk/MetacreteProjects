.main-form
  width 100%
  background-color #fff
  max-width 370px
  margin -34px 120px 0px 0px
  clear both
  float right
  padding-bottom 33px
  -webkit-box-shadow 0px 0px 41px -2px rgba(0,0,0,0.75)
  -moz-box-shadow 0px 0px 41px -2px rgba(0,0,0,0.75)
  box-shadow 0px 0px 41px -2px rgba(0,0,0,0.75)
  @media (max-width: 768px)
    margin 0 auto
    float none
    padding-top 1px

  &--questions
    margin 48px 0 0 0
    @media (max-width:995px)
      margin 30px auto 0 auto
    @media (max-width:500px)
      box-shadow none
      margin 0

  &__title
    text-transform uppercase
    color #40230d
    font-weight 300
    max-width 67%
    text-align center
    margin 28px auto 0 auto
    font-size 17px
    line-height 1.3em
    &-span
      font-weight 400

  &__name, &__phone, &__comment
    width 100%
    padding 8px 10px
    margin 7px 0


  &__desc
    font-size 14px
    color #40230d
    text-align center
    margin 10px 0 0px 0

  &__phone
    width 62%
    display block
    margin 20px auto 0 auto
    padding 8px 10px
    outline none
    border-radius 1px
    border 1px solid #40230d
    &:focus
      outline none


  &__line
    background-color #40230d
    display block
    height 1px
    width 85px
    margin 15px auto 12px auto

  &__link
    color #40230d
    &:hover
      text-decoration none