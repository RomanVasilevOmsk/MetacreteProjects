.nodes-form
  width 100%
  background-color #fff
  max-width 375px
  margin 80px 0 0 0
  clear both
  float right
  padding 0 11px 33px 11px
  -webkit-box-shadow 0px 0px 41px -2px rgba(0,0,0,0.35)
  -moz-box-shadow 0px 0px 41px -2px rgba(0,0,0,0.35)
  box-shadow 0px 0px 41px -2px rgba(0,0,0,0.35)
  @media (max-width: 1200px)
    margin 106px 0 0 0
  @media (max-width: 954px)
    margin 50px auto 0 auto
    padding 1px 11px 33px 11px

  &__title
    text-transform uppercase
    color #40230d
    font-weight 300
    max-width 90%
    text-align center
    margin 28px auto 0 auto
    font-size 21px
    line-height 1.3em
    &-span
      font-weight 400


  &__phone
    width 62%
    display block
    margin 20px auto 0 auto
    padding 8px 10px
    outline none
    border-radius 1px
    border 1px solid #40230d
    &:focus
      outline none

  &__call
    font-size 19px
    font-weight 400
    margin-top 25px

  &__desc
    font-size 14px
    color #40230d
    text-align center
    margin 20px 0 0px 0

  &__link
    color #40230d
    &:hover
      text-decoration none

  &__line
    background-color #40230d
    display block
    height 1px
    width 85px
    margin 21px auto 20px auto

  &__desc1
    font-size 14px
    color #40230d
    text-align center
    margin 10px 0 0px 0